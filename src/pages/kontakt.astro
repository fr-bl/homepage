<script>
  const emailAnchor = document.getElementById(
    "email-anchor",
  ) as HTMLAnchorElement;
  const setEmailHref = () =>
    (emailAnchor.href = `mailto:${emailAnchor.innerText}`);
  emailAnchor.addEventListener("mouseenter", setEmailHref);
  emailAnchor.addEventListener("click", setEmailHref);
</script>
