<div id="cursor-aura" class="inactive" hidden transition:persist></div>

<script>
  const cursorAura = document.getElementById("cursor-aura") as HTMLDivElement;

  addEventListener("mousemove", (e) => {
    cursorAura.animate(
      {
        left: `${e.clientX}px`,
        top: `${e.clientY}px`,
      },
      { duration: 2000, fill: "forwards" },
    );
    cursorAura.hidden = false;
    cursorAura.className = "";
  });
</script>

<style>
  #cursor-aura {
    pointer-events: none;
    position: fixed;
    width: 600px;
    height: 600px;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    background: radial-gradient(
      circle,
      rgba(var(--color-text), 0.05) 0%,
      transparent 70%
    );
    opacity: 1;
    transition: opacity 2s;
  }

  #cursor-aura.inactive {
    opacity: 0;
  }
</style>
